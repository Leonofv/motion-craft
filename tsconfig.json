{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "forceConsistentCasingInFileNames": true,

    "jsx": "react-jsx",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "baseUrl": "./",
    "paths": {
      "#/*": ["./src/*"]
    },

    "plugins": [{ "name": "next" }],

    "noEmit": true,
    "incremental": true
  },

  "include": ["src"]
}
